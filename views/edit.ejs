<%- include("partials/header") %>

<div class="ui main text container segment">	
	<h1>
	Edit <%= blog.title %>
</h1>
<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" value="<%= blog.title %>" required>
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" value="<%= blog.image %>" required>
  </div>
  <div class="field">
    <label>Blog Post</label>
    <textarea name="blog[body]" required></textarea>
  </div>
  <button class="ui inverted purple button" type="submit">Submit</button>
<div id="button">	
  <a class="ui labeled icon button" href="/blogs/<%= blog._id %>">
    <i class="left chevron icon"></i>
    Back
  </a>
</div>
	</form>
</div>

<%- include("partials/footer") %>