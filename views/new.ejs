<%- include("partials/header") %>

     

<div class="ui main text container segment" id="box">		
<form class="ui form" action="/blogs" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" placeholder="Title" required>
  </div>
<div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" placeholder="Paste your URL here" required>
  </div>
 
  <div class="field">
    <label>Blog Post</label>
    <textarea name="blog[body]" required></textarea>
  </div>
  <button class="ui inverted purple button" type="submit">Submit</button>
</form>
</div>



